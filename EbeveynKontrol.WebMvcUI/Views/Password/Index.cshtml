<div class="container">

    @if (ViewBag.Result != null)
    {
        <div class="row">
            <div class=" col-12 alert alert-warning">
                @ViewBag.Result
            </div>
        </div>
    }
    <form action="" method="post">
        <div class="input-group mb-3 mt-5">
            <div class="input-group-prepend">
                <span class="input-group-text">Eski Şifreniz</span>
            </div>
            <input type="password" class="form-control" name="oldPassword">
        </div>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Yeni Şifreniz</span>
            </div>
            <input type="password" class="form-control" name="newPassword1">
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">Yeni Şifreniz Tekrar</span>
            </div>
            <input type="password" class="form-control" name="newPassword2">
        </div>
        <div class="float-right">
            <button type="submit" class="btn btn-danger">Değiştir</button>

        </div>
    </form>
</div>